<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>Dummy_Straw</defName>
    <label>scarecrow</label>
    <description>A straw-made dummy which can scarce birds, and bird-brain raiders. Highly flammable!</description>
    <thingClass>Building_TurretGun</thingClass>
    <graphicData>
      <texPath>Things/Building/Scarecrow</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <drawSize>(1.2,1.2)</drawSize>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
      <shadowData>
        <volume>(0.27,0.25,0.27)</volume>
        <offset>(0,0,0)</offset>
      </shadowData>
    </graphicData>
    <uiIconPath>Things/Building/ScarecrowIcon</uiIconPath>
    <uiIconScale>1.0</uiIconScale>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <stealable>false</stealable>
    <rotatable>false</rotatable>
    <tradeability>None</tradeability>
    <thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>20</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <WorkToBuild>600</WorkToBuild>
      <Mass>10</Mass>
      <Beauty>-5</Beauty>
    </statBases>
    <tickerType>Normal</tickerType>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.5</fillPercent>
    <hasTooltip>true</hasTooltip>
    <costList>
      <Hay>50</Hay>
      <WoodLog>25</WoodLog>
      <Cloth>100</Cloth>
    </costList>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <building>
      <ai_combatDangerous>true</ai_combatDangerous>
      <turretGunDef>Gun_Dummy</turretGunDef>
      <turretBurstCooldownTime>30</turretBurstCooldownTime>
      <turretTopGraphicPath>Things/Building/Blank</turretTopGraphicPath>
    </building>
    <placeWorkers>
      <li>PlaceWorker_TurretTop</li>
    </placeWorkers>
  </ThingDef>
  <ThingDef ParentName="BaseHumanGun">
